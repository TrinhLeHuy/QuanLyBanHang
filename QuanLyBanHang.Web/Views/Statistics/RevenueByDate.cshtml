@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Doanh thu theo ngày";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr><th>Ngày</th><th>Tổng doanh thu (VNĐ)</th></tr>
    </thead>
    <tbody>
    @foreach(var r in Model)
    {
        <tr>
            <td>@((DateTime)r.Date).ToString("dd/MM/yyyy")</td>
            <td>@string.Format("{0:N0}", r.TotalRevenue)</td>
        </tr>
    }
    </tbody>
</table>

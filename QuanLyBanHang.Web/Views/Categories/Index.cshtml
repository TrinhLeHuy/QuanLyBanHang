@model IEnumerable<QuanLyBanHang.Data.Entities.Categories>
@{
    ViewData["Title"] = "Danh mục sản phẩm";
}
<h2>Danh sách Danh Mục Sản Phẩm</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Thêm Danh Mục</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tên danh mục</th>
            <th>Mô tả</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

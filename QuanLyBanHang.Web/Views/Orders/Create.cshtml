@model QuanLyBanHang.Data.Entities.Order

@{
    ViewData["Title"] = "Tạo đơn hàng";
}

<h2>Tạo đơn hàng mới</h2>
<hr />

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label>Khách hàng</label>
        <select asp-for="CustomerId" class="form-select"
                asp-items="@(new SelectList(ViewBag.Customers, "Id", "Name"))"></select>
    </div>

    <div class="mb-3">
        <label>Nhân viên</label>
        <select asp-for="EmployeeId" class="form-select"
                asp-items="@(new SelectList(ViewBag.Employees, "Id", "Name"))"></select>
    </div>

    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.OrderDetails.Count; i++)
            {
                <tr>
                    <td>
                        <select asp-for="OrderDetails[@i].ProductId"
                                asp-items="@(new SelectList(ViewBag.Products, "Id", "Name"))"
                                class="form-select"></select>
                    </td>
                    <td>
                        <input asp-for="OrderDetails[@i].Quantity" class="form-control" />
                    </td>
                    <td>
                        <input asp-for="OrderDetails[@i].UnitPrice" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">Lưu đơn hàng</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

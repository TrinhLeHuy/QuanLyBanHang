@model IEnumerable<QuanLyBanHang.Data.Entities.Order>

<h2>Danh sách đơn hàng</h2>

<a href="/Orders/Create" class="btn btn-success mb-3">+ Thêm đơn hàng</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã đơn hàng</th>
            <th>Khách hàng</th>
            <th>Nhân viên</th>
            <th>Ngày đặt</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Customer?.Name</td>
                <td>@order.Employee?.FullName</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="/Orders/Details/@order.Id" class="btn btn-info btn-sm">Chi tiết</a>
                    <a href="/Orders/Delete/@order.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

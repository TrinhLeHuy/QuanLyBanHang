@model IEnumerable<QuanLyBanHang.Data.Entities.Order>

<h2>Quản lý đơn hàng</h2>

<form method="get" class="d-flex mb-3">
    <input type="text" name="keyword" class="form-control w-25" placeholder="Tìm theo tên khách hàng..." />
    <button class="btn btn-primary ms-2">Tìm kiếm</button>
</form>

<a asp-action="Create" class="btn btn-success mb-3">+ Tạo đơn hàng</a>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Mã đơn</th>
            <th>Khách hàng</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.OrderId</td>
                <td>@o.Customer?.FullName</td>
                <td>@o.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@o.TotalAmount.ToString("N0") đ</td>
                <td>
                    <a asp-action="Details" asp-route-id="@o.OrderId" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@o.OrderId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

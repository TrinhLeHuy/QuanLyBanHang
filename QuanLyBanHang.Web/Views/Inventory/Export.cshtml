@model QuanLyBanHang.Web.Models.InventoryInputViewModel

@{
    ViewData["Title"] = "Xuất Kho";
}

<h2>Xuất Kho</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Export" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Sản phẩm</label>
        <select asp-for="ProductId" asp-items="Model.Products" class="form-select"></select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Kho</label>
        <select asp-for="WarehouseId" asp-items="Model.Warehouses" class="form-select"></select>
        <span asp-validation-for="WarehouseId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Số lượng xuất</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Ghi chú</label>
        <textarea asp-for="Note" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Lưu phiếu xuất</button>
</form>

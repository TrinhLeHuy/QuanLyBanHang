@model dynamic

<h2 class="mb-4">📜 Lịch Sử Nhập / Xuất Kho</h2>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Ngày</th>
            <th>Loại</th>
            <th>Sản phẩm</th>
            <th>Kho</th>
            <th>Nhà cung cấp</th>
            <th>Số lượng</th>
            <th>Ghi chú</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TransactionId</td>
                <td>@item.TransactionDate.ToString("dd/MM/yyyy HH:mm")</td>

                <td>
                    @if (item.TransactionType == "IN")
                    {
                        <span class="text-success fw-bold">Nhập</span>
                    }
                    else
                    {
                        <span class="text-danger fw-bold">Xuất</span>
                    }
                </td>

                <td>@item.ProductName</td>
                <td>@item.WarehouseName</td>
                <td>@item.SupplierName</td>
                <td class="fw-bold">@item.Quantity</td>
                <td>@item.Note</td>
            </tr>
        }
    </tbody>
</table>

@model QuanLyBanHang.Web.Models.InventoryInputViewModel

@{
    ViewData["Title"] = "Nhập Kho";
}

<h2>Nhập Kho</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Import" method="post">
    @Html.AntiForgeryToken()


    <div class="mb-3">
        <label class="form-label">Sản phẩm</label>
        <select asp-for="ProductId" asp-items="Model.Products" class="form-select">
            <option value="">-- Chọn sản phẩm --</option>
        </select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Nhà cung cấp</label>
        <select asp-for="SupplierId" asp-items="Model.Suppliers" class="form-select">
            <option value="">-- Chọn nhà cung cấp --</option>
        </select>
        <span asp-validation-for="SupplierId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Kho</label>
        <select asp-for="WarehouseId" asp-items="Model.Warehouses" class="form-select">
            <option value="">-- Chọn kho --</option>
        </select>
        <span asp-validation-for="WarehouseId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Số lượng nhập</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Ghi chú</label>
        <textarea asp-for="Note" class="form-control"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu phiếu nhập</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model IEnumerable<QuanLyBanHang.Data.Entities.Customer>

<h2>Danh sách khách hàng</h2>
<a href="/Customer/Create" class="btn btn-primary mb-3">Thêm khách hàng</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Email</th>
            <th>Điện thoại</th>
            <th>Địa chỉ</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Id</td>
            <td>@c.Name</td>
            <td>@c.Email</td>
            <td>@c.Phone</td>
            <td>@c.Address</td>
            <td>
                <a href="/Customer/Edit/@c.Id" class="btn btn-warning">Sửa</a>
                <a href="/Customer/Delete/@c.Id" class="btn btn-danger">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>

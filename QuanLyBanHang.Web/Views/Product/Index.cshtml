@model IEnumerable<QuanLyBanHang.Data.Entities.Product>

<h2>Danh sách sản phẩm</h2>

<form method="get" asp-action="Index">
    <input type="text" name="search" value="@ViewBag.Search" placeholder="Tìm kiếm..." />
    <button type="submit">Tìm</button>
</form>

<a asp-action="Create">+ Thêm sản phẩm</a>

<table>
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Tồn kho</th>
            <th>Danh mục</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td>@p.Stock</td>
                <td>@p.Categories</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@p.Id" onclick="return confirm('Xóa sản phẩm này?')">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
